<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:orientation="vertical" 
    android:id="@+id/rl_main" 
    android:focusable="true" 
    android:focusableInTouchMode="true" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="horizontal"
        android:id="@+id/ly_main_Send_Area" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
      	xmlns:android="http://schemas.android.com/apk/res/android">
        <EditText 
            android:id="@+id/et_main_Send_Text" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:hint="@string/et_actDiscovery_SendText_Hint"
            android:layout_weight="8.0" 
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/btn_main_Send"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/btn_main_Send"
            android:layout_weight="2.0"
            android:onClick="onBtnSend" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ly_main_Send_Area"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView
            android:id="@+id/sv_Back_Data_Scroll"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView
                android:id="@+id/tv_Back_Data_Show"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_actDiscovery_Receive_Show_Init"
                android:singleLine="false" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>